<resources><!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_selector</item>
        <item name="colorPrimary">@color/them800</item>
        <item name="colorPrimaryDark">@color/them900</item>
        <item name="colorAccent">@color/unthem500</item>
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="IconButtonYellow" parent="IconButton">
        <item name="android:background">@drawable/button_yellow_background</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown</item>
        <item name="android:background">@drawable/spinner_dropdown</item>
    </style>

    <style name="HomeSectionsLayout">
        <item name="android:background">@drawable/oval_shape</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="HomeSectionsLayoutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeSectionsLayoutLabel">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FragmentListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/them800</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CardViewButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="PositiveButton" parent="CardViewButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cardBackgroundColor">@color/green500</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="NegativeButton" parent="CardViewButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cardBackgroundColor">@color/red500</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PosButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">Oui</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/bkg_btn_positive</item>
        <item name="android:textColor">@color/them50</item>
    </style>

    <style name="NegButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">Non</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/bkg_btn_negative</item>
        <item name="android:textColor">@color/them50</item>
    </style>

    <style name="CardViewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardViewContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CardViewLayoutTitle" parent="CardViewHorizontalItem">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CardViewLayoutTitleImage">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="CardViewLayoutTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CardViewSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unthem600</item>
    </style>

    <style name="CardViewTitle3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/them700</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CardViewHorizontalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewHorizontalItemLeftOrRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewHorizontalItemLeftText" parent="CardViewHorizontalItemLeftOrRightText">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CardViewHorizontalItemRightText" parent="CardViewHorizontalItemLeftOrRightText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="CardViewHorizontalItemMiddleText" parent="CardViewHorizontalItemLeftOrRightText">
        <item name="android:textColor">@color/them500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SwitchNotification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonReminder">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CardViewInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/flopWeekMoney" android:text="184,00€"/>
                </LinearLayout>

                <!-- By Month -->
                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/flopMonthLabel" android:text="Avril 2016"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/flopMonthCourse" android:text="(16)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/flopMonthMoney" android:text="398,00€"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


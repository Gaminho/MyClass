                </LinearLayout>

            </LinearLayout>

            <!-- By Weeks -->
            <LinearLayout style="@style/CardViewContent">

                <TextView style="@style/CardViewSubtitle" android:text="Top semaine" />

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/week1Label" android:text="11/04/16 - 17/04/16"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/week1Course" android:text="(7)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/week1Money" android:text="184,00€"/>
                </LinearLayout>

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/week2Label" android:text="16/05/16 - 22/05/16"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/week2Course" android:text="(5)"/>

                </LinearLayout>

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/week3Label" android:text="02/11/16 - 08/11/16"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/week3Course" android:text="(5)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/week3Money" android:text="120,00€"/>
                </LinearLayout>

            </LinearLayout>

            <!-- By Month -->
            <LinearLayout style="@style/CardViewContent">

                <TextView style="@style/CardViewSubtitle" android:text="Top mois" />

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/month1Label" android:text="Avril 2016"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/month1Course" android:text="(16)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/month1Money" android:text="398,00€"/>
                </LinearLayout>

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/month2Label" android:text="Mars 2016"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/month2Course" android:text="(17)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/month2Money" android:text="390,00€"/>
                </LinearLayout>

                <LinearLayout style="@style/CardViewHorizontalItem">
                    <TextView style="@style/CardViewHorizontalItemLeftText" android:id="@+id/month3Label" android:text="Novembre 2015"/>
                    <TextView style="@style/CardViewHorizontalItemMiddleText" android:id="@+id/month3Course" android:text="(16)"/>
                    <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/month3Money" android:text="368,00€"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- FLOP STATS -->
    <android.support.v7.widget.CardView style="@style/CardViewInformation">


    <LinearLayout style="@style/CardViewContainer">

            <!-- HEADER -->
            <LinearLayout style="@style/CardViewLayoutTitle">

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="3dp"
    android:background="@color/them700">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="45"
        android:orientation="vertical"
        android:layout_marginRight="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/unthem300"
            android:background="@color/them700"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="ElÃ¨ve"/>

        <Spinner
            android:id="@+id/spinnerPupils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@drawable/spinner_dropdown_2"
            android:background="@color/them700"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:background="@color/unthem300"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/unthem300"
            android:background="@color/them700"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Etat"/>

        <Spinner
            android:id="@+id/spinnerStates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:popupBackground="@drawable/spinner_dropdown_2"
            android:background="@color/them700"/>

    </LinearLayout>

</LinearLayout>

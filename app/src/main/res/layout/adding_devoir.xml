<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">

    <!-- Informations générales  -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- LABEL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="0dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Informations générales"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <!-- PupilName-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Elève"
                    android:textColor="@color/them700"/>

                <Spinner
                    android:id="@+id/spinnerPupils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="55dp"/>

            </LinearLayout>

            <!-- Date -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">


                <com.joanzapata.iconify.widget.IconButton
                    android:id="@+id/pickDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="{fa-calendar}"
                    android:background="@color/unthem300"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/dateLegend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/pickDate"
                    android:layout_alignParentLeft="true"
                    android:textSize="10dp"
                    android:text="Date"
                    android:textColor="@color/them700"/>

                <TextView
                    android:id="@+id/day"
                    android:layout_below="@+id/dateLegend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/pickDate"
                    android:textSize="16dp"
                    android:text="Dimanche 31 janvier 2016"
                    android:textColor="@color/textColor"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Informations générales  -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- LABEL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="0dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Informations sur le devoir"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <!-- Type de devoir -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LABEL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Type de devoir"
                    android:textColor="@color/them700"/>

                <RadioGroup
                    android:id="@+id/rGroupTypeDevoir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbDST"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DST"/>

                    <RadioButton
                        android:id="@+id/rbDM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DM"/>

                    <RadioButton
                        android:id="@+id/rbInterro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Interro"/>

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Barême"
                    android:textColor="@color/them700"/>

                <EditText
                    android:id="@+id/bareme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:minWidth="75dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="20"/>

            </LinearLayout>

            <!-- Chapitre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Chapitre"
                    android:textColor="@color/them700"/>

                <EditText
                    android:id="@+id/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:hint="Chapitre"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Remarques  -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/remarque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Remarques -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="0dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Notes et résultats"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <!-- Note -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Note"
                    android:textColor="@color/them700"/>

                <EditText
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:minWidth="75dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:hint="0.00"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Remarques"
                android:textColor="@color/them700"/>

            <EditText
                android:id="@+id/memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:inputType="textCapSentences|textMultiLine"
                android:hint="Remarques"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/them100">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="8dp">

            <LinearLayout style="@style/CardViewContainer">

                <!-- HEADER -->
                <LinearLayout style="@style/CardViewLayoutTitle">
                    <ImageView style="@style/CardViewLayoutTitleImage" android:src="@drawable/ic_assessment_white_48dp"/>
                    <TextView style="@style/CardViewLayoutTitleText" android:text="Statistiques générales"/>
                </LinearLayout>

                <!-- By Pupils -->
                <LinearLayout style="@style/CardViewContent">

                    <!-- SUBTITLE -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewSubtitle" android:text="Les élèves"/>
                        <TextView style="@style/CardViewHorizontalItemRightText"
                            android:id="@+id/nbPupils"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:text="12"/>
                    </LinearLayout>

                    <!-- SITUATION -->
                    <TextView style="@style/CardViewTitle3" android:text="Situation"/>
                    <!-- Declarés-->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Declarés"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbAgencyPupil" android:text="12"/>
                    </LinearLayout>
                    <!-- Non declarés -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Non declarés"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbBlackPupil" android:text="2"/>
                    </LinearLayout>

                    <!-- FREQUENCE -->
                    <TextView style="@style/CardViewTitle3" android:text="Fréquence"/>
                    <!-- Reguliers -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Réguliers"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbRegularPupils" android:text="12"/>
                    </LinearLayout>
                    <!-- Occasionnels -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Occasionnels"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbOccasPupils" android:text="12"/>
                    </LinearLayout>
                    <!-- Temporaires -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Temporaires"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbTempPupils" android:text="12"/>
                    </LinearLayout>

                    <!-- SEXE -->
                    <TextView style="@style/CardViewTitle3" android:text="Sexe"/>
                    <!-- Garcons -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Garçons"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbMalePupils" android:text="12"/>
                    </LinearLayout>
                    <!-- Filles -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Filles"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbFemalePupils" android:text="12"/>
                    </LinearLayout>

                    <!-- CLASSE -->
                    <TextView style="@style/CardViewTitle3" android:text="Classe"/>
                    <!-- College -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Collège"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbCollegePupils" android:text="12"/>
                    </LinearLayout>
                    <!-- Lycee -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Lycée"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbLyceePupils" android:text="12"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- By Courses -->
                <LinearLayout style="@style/CardViewContent">

                    <!-- SUBTITLE -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewSubtitle" android:text="Les cours"/>
                        <TextView style="@style/CardViewHorizontalItemRightText"
                            android:id="@+id/nbCours"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:text="12"/>
                    </LinearLayout>

                    <!-- Valides -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Validés"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbValidatedCourses" android:text="12"/>
                    </LinearLayout>
                    <!-- En attente -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="En attente"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbWaitingCourses" android:text="12"/>
                    </LinearLayout>
                    <!-- A venir -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="A venir"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbForessenCourses" android:text="12"/>
                    </LinearLayout>
                    <!-- Annules-->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Annulés"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbCanceledCourses" android:text="12"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- By Devoirs -->
                <LinearLayout style="@style/CardViewContent">

                    <!-- SUBTITLE -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewSubtitle" android:text="Les devoirs"/>
                        <TextView style="@style/CardViewHorizontalItemRightText"
                            android:id="@+id/nbDevoirs"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:text="12"/>
                    </LinearLayout>
                    <!-- DM -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Devoirs maison"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbDMDevoir" android:text="12"/>
                    </LinearLayout>
                    <!-- Interro -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Interrogations"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbInterroDevoir" android:text="12"/>
                    </LinearLayout>
                    <!-- DST -->
                    <LinearLayout style="@style/CardViewHorizontalItem">
                        <TextView style="@style/CardViewHorizontalItemLeftText" android:text="Devoirs sur table"/>
                        <TextView style="@style/CardViewHorizontalItemRightText" android:id="@+id/nbDSTDevoir" android:text="12"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">


    <!-- ACTIONS BAR -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/them700"
        android:padding="5dp"
        android:elevation="3dp">

        <LinearLayout
            android:id="@+id/leftAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/leftActionIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="{fa-bookmark} "
                android:textColor="@color/unthem300"
                android:gravity="center_vertical"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/leftActionLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Commentaires"
                android:textColor="@color/white"
                android:singleLine="true"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/rightActionIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="{fa-check} "
                android:textColor="@color/unthem300"
                android:gravity="center_vertical"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/rightActionLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Valider"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkg_day_calendar"
        android:elevation="2dp">

        <TextView
            android:id="@+id/dayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="02"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/isThereClass"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_book_open_page_variant_white_48dp"
                android:layout_gravity="center"
                android:tint="@color/them700"
                android:layout_marginRight="0.5dp"/>

            <ImageView
                android:id="@+id/isThereDevoir"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_assignment_white_48dp"
                android:layout_gravity="center"
                android:tint="@color/unthem800"
                android:layout_marginLeft="0.5dp"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@drawable/selector_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/man"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pupilName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="Lucas Duffau"/>

                    <TextView
                        android:id="@+id/pupilClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:text="Seconde"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:visibility="visible"
                        android:weightSum="3">

                            <TextView
                                android:id="@+id/goTo"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textColor="@color/unthem600"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:text="Y ALLER"/>

                            <TextView
                                android:id="@+id/call"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textColor="@color/unthem600"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:text="APPELER"/>

                        </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:visibility="gone">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="{fa-phone}"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold"/>

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="{fa-map}"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/darkBlue"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
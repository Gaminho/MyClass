<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">

    <!-- Informations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/them700"
            android:elevation="3dp"
            android:translationZ="2dp">

            <LinearLayout
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="{fa-edit} "
                    android:textColor="@color/unthem300"
                    android:gravity="center_vertical"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Modifier"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/suivi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="{fa-line-chart} "
                    android:textColor="@color/unthem300"
                    android:gravity="center_vertical"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Suivi"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Informations générales  -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Informations générales"
                                android:focusable="true"
                                android:focusableInTouchMode="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="match_parent"
                                    android:minHeight="110dp">

                                    <ImageView
                                        android:id="@+id/avatar"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:src="@drawable/woman"/>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="0dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nom"
                                        android:textColor="@color/them700"
                                        android:textSize="10dp"/>

                                    <TextView
                                        android:id="@+id/name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textCapWords"
                                        android:textSize="16dp"
                                        android:textColor="@color/textColor"
                                        android:text="Wael Herzi"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Classe"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/them700"
                                        android:textSize="10dp"/>

                                    <TextView
                                        android:id="@+id/level"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textCapWords"
                                        android:textSize="16dp"
                                        android:textColor="@color/textColor"
                                        android:text="Seconde"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Depuis"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/them700"
                                        android:textSize="10dp"/>

                                    <TextView
                                        android:id="@+id/since"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textCapWords"
                                        android:textSize="16dp"
                                        android:textColor="@color/textColor"
                                        android:text="Depuis Septembre 2012"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/isActive"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            app:cardBackgroundColor="@color/green500"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <!-- Coordonnées  -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginBottom="8dp"
                            android:paddingLeft="0dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Coordonnées"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>

                        <!-- TELEPHONE -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personnel"
                                android:textColor="@color/them700"
                                android:textSize="10dp"
                                android:gravity="bottom"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tel1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0659530080"
                                    android:textColor="@color/textColor"
                                    android:textSize="16dp"/>

                                <com.joanzapata.iconify.widget.IconTextView
                                    android:id="@+id/call1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:textSize="20dp"
                                    android:textColor="#2e7d32"
                                    android:text="{fa-phone}"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- TEL PARENT -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parent"
                                android:textColor="@color/them700"
                                android:textSize="10dp"
                                android:gravity="bottom"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tel2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:text="0659530080"
                                    android:textSize="16dp"/>

                                <com.joanzapata.iconify.widget.IconTextView
                                    android:id="@+id/call2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:textSize="20dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#2e7d32"
                                    android:text="{fa-phone}"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <!-- TEL PARENT -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adresse"
                                android:textColor="@color/them700"
                                android:textSize="10dp"
                                android:gravity="bottom"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.joanzapata.iconify.widget.IconTextView
                                    android:id="@+id/goTo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:textSize="20dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#ffb300"
                                    android:text="{fa-map}"/>

                                <TextView
                                    android:id="@+id/adress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/goTo"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="@color/textColor"
                                    android:text="13 place de Leyre, Caudéran, Bordeaux"
                                    android:textSize="16dp"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- Argent  -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginBottom="8dp"
                            android:paddingLeft="0dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rémunération"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarif horaire"
                            android:textColor="@color/them700"
                            android:textSize="10dp"
                            android:gravity="bottom"/>

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="center"
                            android:textColor="@color/textColor"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="@color/them700"
                            android:textSize="10dp"
                            android:layout_marginTop="2dp"
                            android:gravity="bottom"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="center"
                            android:hint="Déclaré"
                            android:textColor="@color/textColor"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fréquence"
                            android:textColor="@color/them700"
                            android:textSize="10dp"
                            android:layout_marginTop="2dp"
                            android:gravity="bottom"/>

                        <TextView
                            android:id="@+id/frequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="center"
                            android:hint="Régulier"
                            android:textColor="@color/textColor"
                            android:textSize="16dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
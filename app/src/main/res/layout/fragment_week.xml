<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/them700"
        android:gravity="center"
        android:elevation="3dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/lastWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/unthem300"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="{fa-arrow-circle-left}"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Semaine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/actualWeek"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="18/01/16 - 24/01/16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/nextWeek"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textColor="@color/unthem300"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="{fa-arrow-circle-right}"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/informationWeek"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/them700"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/unthem300"
        android:textSize="18dp"
        android:text="Cours : 2 ; Argent : 49 â‚¬"
        android:elevation="3dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/weekList"/>




</LinearLayout>
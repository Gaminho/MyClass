<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/them500"
        android:elevation="3dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="0.5dp"
            android:textColor="@color/unthem300"
            android:background="@color/them700"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Semaine"
            android:gravity="center"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="0.5dp"
            android:textColor="@color/white"
            android:background="@color/them700"
            android:textAllCaps="true"
            android:text="Mois"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Navigate through weeks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/them500"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/pastMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_database_grey600_48dp"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/monthLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="0.5dp"
            android:textColor="@color/unthem300"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Octobre 2016"
            android:gravity="center" />

        <ImageView
            android:id="@+id/nextMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_database_grey600_48dp"
            android:tint="@color/white"/>

    </LinearLayout>

    <!-- Day labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lu."
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ma."
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Me."
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Je"
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ve"
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sa."
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Di."
            android:textColor="@color/white"
            android:background="@color/them400"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:numColumns="7"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3f3f3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="1dp">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_assessment_white_48dp"
                        android:tint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:paddingLeft="4dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Statistiques"
                        android:id="@+id/textView6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Cours"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Argent"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Devoirs"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="1dp">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_assessment_white_48dp"
                        android:tint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:paddingLeft="4dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Moyenne"
                        android:id="@+id/textView5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Cours"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Argent"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Devoirs"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/nbAgencyPupil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="12"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/them700"
            android:gravity="center"
            android:elevation="3dp">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/lastWeek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/unthem300"
                android:textSize="35dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="{fa-arrow-circle-left}"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="Semaine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/actualWeek"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="18/01/16 - 24/01/16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/nextWeek"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textColor="@color/unthem300"
                android:textSize="35dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="{fa-arrow-circle-right}"
                android:layout_weight="2"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weekList"/>

        <TextView
            android:id="@+id/informationWeek"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/them700"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textColor="@color/unthem300"
            android:textSize="18dp"
            android:text="Cours : 2 ; Argent : 49 €"
            android:elevation="3dp"/>

    </LinearLayout>


</LinearLayout>